---
import AboutUsImage from "@/assets/images/about-us.jpg";
import Picture from "astro/components/Picture.astro";

import type { Language } from "@/types/language.type";
import { getTranslation } from "@/i18n/index";

const lang = Astro.params.lang as Language;
---

<div
  class="relative rounded-2xl border border-neutral-800 overflow-hidden select-none"
>
  <div
    class="aspect-[4/3] bg-gradient-to-br from-emerald-600/20 via-teal-400/10 to-fuchsia-500/10"
  >
    <Picture
      src={AboutUsImage}
      alt={getTranslation(lang, "components.aboutUs.alt")}
      class="object-cover object-top w-full h-full"
      formats={["avif", "webp", "png"]}
      loading={"lazy"}
    />
  </div>
  <div class="p-4 bg-neutral-800/50">
    <h3 class="font-semibold">
      {getTranslation(lang, "components.aboutUs.title")}
    </h3>
    <p class="text-sm text-neutral-400 mt-1">
      {getTranslation(lang, "components.aboutUs.description")}
    </p>
  </div>
</div>
