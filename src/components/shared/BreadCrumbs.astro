---
import type { Language } from "@/types/language.type";
import { getTranslation } from "@/i18n/index";

const lang = Astro.params.lang as Language;

interface BreadcrumbLink {
  href: string;
  name: string;
  isActive?: boolean;
}

interface Props {
  links: BreadcrumbLink[];
}

const { links } = Astro.props;
---

<nav class="mb-4 select-none" aria-label="Breadcrumb">
  <ol class="flex flex-wrap items-center gap-2 text-sm">
    <li>
      <a href={`/${lang}`} class="text-neutral-600 hover:text-emerald-600 font-medium transition-colors"
        >{getTranslation(lang, "common.breadCrumbsOptions.home")}</a
      >
    </li>
    {
      links.map(({ href, name, isActive }, index) => (
        <li class="flex items-center gap-2">
          <svg
            class="w-4 h-4 text-neutral-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
          {isActive || index === links.length - 1 ? (
            <span class="text-neutral-800 font-semibold">{name}</span>
          ) : (
            <a href={href} class="text-neutral-600 hover:text-emerald-600 font-medium transition-colors">
              {name}
            </a>
          )}
        </li>
      ))
    }
  </ol>
</nav>
