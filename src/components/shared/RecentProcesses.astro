---
const recents = [
  { name: "video-evento.mp4 → .webm", time: "hace 2 h", status: "Completado" },
  { name: "encuesta.pdf → páginas 1-4", time: "ayer", status: "Completado" },
  { name: "logo.png → 512x512", time: "ayer", status: "Completado" },
];
---

<div class="mt-8 select-none">
  <div class="flex items-center justify-between mb-2">
    <h2 class="text-sm uppercase tracking-wider text-neutral-400">Recientes</h2>
  </div>
  <div
    class="divide-y divide-neutral-800 rounded-2xl border border-neutral-800 overflow-hidden"
  >
    {
      recents.map((r) => (
        <div
          id={r.name}
          class="flex items-center justify-between px-4 py-3 bg-neutral-800/50 "
        >
          <div class="min-w-0">
            <p class="truncate">{r.name}</p>
            <p class="text-xs text-neutral-400">{r.time}</p>
          </div>
          <span class="text-xs rounded-full border border-neutral-700 px-2 py-0.5 text-neutral-300">
            {r.status}
          </span>
        </div>
      ))
    }
  </div>
</div>
