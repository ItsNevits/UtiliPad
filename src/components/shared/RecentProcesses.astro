---
import type { Language } from "../../types/language.type";
import es from "../../i18n/es";
import en from "../../i18n/en";

interface Props {
  lang?: Language;
}

const { lang = "es" } = Astro.props;
const translations = { es, en };
const t = translations[lang];

const recents = [
  {
    name: "video-evento.mp4 → .webm",
    time: t.components.recent.timeAgo.hoursAgo.replace("{count}", "2"),
    status: t.components.recent.completed,
  },
  {
    name: "encuesta.pdf → páginas 1-4",
    time: t.components.recent.timeAgo.yesterday,
    status: t.components.recent.completed,
  },
  {
    name: "logo.png → 512x512",
    time: t.components.recent.timeAgo.yesterday,
    status: t.components.recent.completed,
  },
];
---

<div class="mt-8 select-none">
  <div class="flex items-center justify-between mb-2">
    <h2 class="text-sm uppercase tracking-wider text-neutral-400">
      {t.components.recent.title}
    </h2>
  </div>
  <div
    class="divide-y divide-neutral-800 rounded-2xl border border-neutral-800 overflow-hidden"
  >
    {
      recents.map((r) => (
        <div
          id={r.name}
          class="flex items-center justify-between px-4 py-3 bg-neutral-800/50 "
        >
          <div class="min-w-0">
            <p class="truncate">{r.name}</p>
            <p class="text-xs text-neutral-400">{r.time}</p>
          </div>
          <span class="text-xs rounded-full border border-neutral-700 px-2 py-0.5 text-neutral-300">
            {r.status}
          </span>
        </div>
      ))
    }
  </div>
</div>
