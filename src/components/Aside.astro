---
import AboutUs from "./shared/AboutUs.astro";
import News from "./shared/News.astro";
import ProcessSummary from "./shared/ProcessSummary.astro";
import type { Language } from "../types/language.type";
import es from "../i18n/es";
import en from "../i18n/en";

interface Props {
  lang?: Language;
}

const { lang = "es" } = Astro.props;

const translations = { es, en };
const t = translations[lang];
---

<aside class="col-span-12 xl:col-span-3 space-y-6">
  <!-- About Us -->
  <AboutUs t={t} />
  <!-- Processing Summary -->
  <ProcessSummary t={t} />
  <!-- News -->
  <News t={t} lang={lang} />
</aside>
