---
const categories = [
  { name: "Archivos", href: "/files" },
  { name: "Imágenes", href: "/images" },
  { name: "Texto", href: "/text" },
];

// Obtener la URL actual para marcar la categoría activa
const currentPath = Astro.url.pathname;
---

<aside class="flex xl:block col-span-2 select-none">
  <div class="sticky top-20 space-y-2">
    <h3 class="text-xs uppercase tracking-wider text-neutral-400">
      Categorías <span class="xl:hidden">:</span>
    </h3>
    <ul class="flex xl:block gap-2">
      {
        categories.map((category) => (
          <li>
            <a
              href={category.href}
              class={`block px-3 py-2 rounded-lg transition-colors duration-200 ${
                currentPath === category.href
                  ? "bg-neutral-800 text-white"
                  : "text-neutral-300 hover:bg-neutral-900 hover:text-white"
              }`}
            >
              <span class="inline-flex items-center gap-2">
                {category.name}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</aside>
