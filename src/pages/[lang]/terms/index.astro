---
import MainLayout from "@/Layouts/MainLayout.astro";
import Hero from "@/components/shared/Hero.astro";

import type { Language } from "@/types/language.type";
import { getTranslation } from "@/i18n/index";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

const lang = Astro.params.lang as Language;
const termsContent = getTranslation(lang, "pages.terms.content");
---

<MainLayout
  title={getTranslation(lang, "seo.pages.terms.title")}
  description={getTranslation(lang, "seo.pages.terms.description")}
>
  <div class="bg-[#dddfe0] m-4 rounded-2xl pb-10 md:pb-15">
    <Header />
    <section class="w-full max-w-7xl mx-auto flex flex-col">
      <Hero
        title={getTranslation(lang, "pages.terms.title")}
        description={getTranslation(lang, "pages.terms.description")}
      />
    </section>
  </div>

  <main
    class="max-w-7xl w-full mx-auto p-6 mb-8 md:mb-12 border border-neutral-200 rounded-2xl bg-white"
  >
    <div>
      {
        Array.isArray(termsContent) &&
          termsContent.map((section) => (
            <div class="mb-8 last:mb-0">
              <h2 class="text-xl md:text-2xl font-bold leading-tight mb-4 text-neutral-800">
                {section.title}
              </h2>
              {Array.isArray(section.paragraphs) &&
              section.paragraphs.length > 1 ? (
                <ul class="list-disc list-inside mb-4 space-y-2">
                  {section.paragraphs.map((paragraph: string) => (
                    <li
                      class="text-neutral-700 leading-relaxed"
                      set:html={paragraph}
                    />
                  ))}
                </ul>
              ) : (
                <p
                  class="mb-4 text-neutral-700 leading-relaxed"
                  set:html={
                    Array.isArray(section.paragraphs)
                      ? section.paragraphs[0]
                      : ""
                  }
                />
              )}
            </div>
          ))
      }
    </div>
  </main>
  <Footer />
</MainLayout>
