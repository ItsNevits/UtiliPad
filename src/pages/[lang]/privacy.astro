---
import Hero from "@components/shared/Hero.astro";
import type { Language } from "../../types/language.type";
import en from "src/i18n/en";
import es from "src/i18n/es";
import MainLayout from "src/Layouts/MainLayout.astro";

export function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const lang = Astro.params.lang as Language;
const translations = { es, en };
const t = translations[lang];
---

<MainLayout lang={lang} t={t}>
  <Hero
    title={t.sites.privacy.hero.title}
    description={t.sites.privacy.hero.description}
  />

  <div
    class="bg-neutral-800/50 overflow-hidden rounded-2xl border border-neutral-800 mt-5 p-6 select-none"
  >
    <div>
      {
        t.sites.privacy.content.map((section) => (
          <div class="mb-6 last:mb-0">
            <h2 class="text-xl md:text-2xl font-bold leading-tight mb-4">
              {section.title}
            </h2>
            {section.paragraphs.length > 1 ? (
              <ul class="list-disc list-inside mb-4">
                {section.paragraphs.map((paragraph) => (
                  <li class="mb-2 text-neutral-400" set:html={paragraph} />
                ))}
              </ul>
            ) : (
              <p
                class="mb-4 text-neutral-400"
                set:html={section.paragraphs[0]}
              />
            )}
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
