---
export const prerender = false;

import NewMainLayout from "@/Layouts/NewMainLayout.astro";
import Hero from "@/components/shared/Hero.astro";

import type { Language } from "@/types/language.type";
import { getTranslation } from "@/i18n/index";
import Cards from "@/components/shared/Cards.astro";
import ToolsGrid from "@/components/shared/ToolsGrid.astro";

const lang = Astro.params.lang as Language;
---

<NewMainLayout>
  <!-- Hero -->
  <Hero
    title={getTranslation(lang, "pages.home.title")}
    description={getTranslation(lang, "pages.home.description")}
  />

  <Cards title="Herramientas destacadas" />
  <ToolsGrid title="All Tools" />
</NewMainLayout>
