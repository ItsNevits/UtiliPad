---
import MainLayout from "src/Layouts/MainLayout.astro";
import Hero from "@components/shared/Hero.astro";
import Tools from "@components/shared/Tools.astro";
import RecentProcesses from "@components/shared/RecentProcesses.astro";

import type { Language } from "@@types/language.type";
import { getTranslation } from "@i18n/index";

const lang = Astro.params.lang as Language;

export function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}
---

<MainLayout>
  <!-- Hero -->
  <Hero
    title={getTranslation(lang, "pages.home.title")}
    description={getTranslation(lang, "pages.home.description")}
  />
  <!-- Tools -->
  <Tools />
  <!-- Recent Processes -->
  <!-- <RecentProcesses /> -->
</MainLayout>
