---
import Tools from "@components/shared/Tools.astro";
import Hero from "@components/shared/Hero.astro";
import RecentProcesses from "@components/shared/RecentProcesses.astro";
import MainLayout from "src/Layouts/MainLayout.astro";
import type { Language } from "../../types/language.type";
import es from "../../i18n/es";
import en from "../../i18n/en";

export function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const lang = Astro.params.lang as Language;
const translations = { es, en };
const t = translations[lang];
---

<MainLayout pathname="/" lang={lang}>
  <!-- Hero -->
  <Hero
    title={t.sites.home.hero.title}
    description={t.sites.home.hero.description}
  />
  <!-- Tools -->
  <Tools t={t} />
  <!-- Recent Processes -->
  <RecentProcesses lang={lang} />
</MainLayout>
