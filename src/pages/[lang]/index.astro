---
export const prerender = false;

import FeaturedTools from "@/components/shared/FeaturedTools.astro";
import MainLayout from "@/Layouts/MainLayout.astro";
import Hero from "@/components/shared/Hero.astro";

import type { Language } from "@/types/language.type";
import { getTranslation } from "@/i18n/index";

const lang = Astro.params.lang as Language;
---

<MainLayout>
  <Hero
    title={getTranslation(lang, "pages.home.title")}
    description={getTranslation(lang, "pages.home.description")}
  />
</MainLayout>
