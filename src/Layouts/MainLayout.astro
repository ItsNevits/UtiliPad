---
import "@/styles/base/global.css";

import type { Language } from "@/types/language.type.ts";
import { getDynamicSEO, generateJSONLD } from "@/utils/seo";

const lang = Astro.params.lang as Language;

interface Props {
  title?: string;
  description?: string;
  pageData?: Record<string, string>;
}

const {
  title,
  description,
  pageData = {},
}: Props = Astro.props;

// Generate dynamic SEO
const dynamicSEO = getDynamicSEO(Astro.url.pathname, lang, pageData);
const finalTitle = title || dynamicSEO.title;
const finalDescription = description || dynamicSEO.description;

const baseUrl = Astro.site?.toString().endsWith('/')
  ? Astro.site.toString().slice(0, -1)
  : Astro.site?.toString() || '';
const currentUrl = `${baseUrl}${Astro.url.pathname}`;

// Generate hreflang URLs
const alternateUrl = Astro.url.pathname.replace(/^\/(es|en)/, '');
const esUrl = `${baseUrl}/es${alternateUrl}`;
const enUrl = `${baseUrl}/en${alternateUrl}`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO Básico -->
    <title>{finalTitle}</title>
    <meta name="description" content={finalDescription} />
    <meta name="robots" content="index, follow, max-image-preview:large" />
    <link rel="canonical" href={currentUrl} />

    <!-- Hreflang for international SEO -->
    <link rel="alternate" hreflang="es" href={esUrl} />
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="x-default" href={esUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={finalTitle} />
    <meta property="og:description" content={finalDescription} />
    <meta
      property="og:image"
      content="https://utilipad.com/og/og-home-1200x630.jpg"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="UtiliPad" />
    <meta property="og:locale" content={lang} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={finalTitle} />
    <meta name="twitter:description" content={finalDescription} />
    <meta
      name="twitter:image"
      content="https://utilipad.com/og/og-home-1200x630.jpg"
    />

    <!-- Favicon & PWA -->
    <link
      rel="icon"
      href="/icons/favicon-32x32.png"
      sizes="32x32"
      type="image/png"
    />
    <link
      rel="icon"
      href="/icons/favicon-16x16.png"
      sizes="16x16"
      type="image/png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/icons/apple-touch-icon.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#10b981" />

    <!-- JSON-LD  -->
    <script type="application/ld+json" set:html={JSON.stringify(generateJSONLD(Astro.url.pathname, baseUrl, currentUrl, lang, finalTitle, finalDescription, pageData), null, 2)}>
    </script>

    <!-- Verificación de Motores de Búsqueda -->
    <meta name="msvalidate.01" content="1720E4BBCCA9E707BF295985CA319531" />
    <meta name="yandex-verification" content="94de33fcb2f41ff6" />

    <!-- Analytics y Tracking -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-Q0C3PRC4E8"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-Q0C3PRC4E8");
    </script>

    <!-- Google AdSense -->
    <script is:inline async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3668405035365712" crossorigin="anonymous"></script>
  </head>
  <body class="bg-white">
    <slot />
  </body>
</html>
